.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.banner-img {
  width: 100%;
  height: 200px; /* Adjust as needed */
}

.menu-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20px 0;
}

.menu-item {
  background-color: #FFA07A; /* Salmon color */
  border-radius: 10px;
  width: 80%;
  text-align: center;
  padding: 10px;
  margin: 10px 0;
}

.menu-item-long {
  background-color: #FFA07A; /* Salmon color */
  border-radius: 10px;
  width: 80%;
  text-align: center;
  padding: 10px;
  margin: 20px 0;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #FFD700; /* Gold color */
}

.tab-item {
  padding: 10px;
  flex-grow: 1;
  text-align: center;
}
