.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.banner-img {
  width: 100%;
  height: 200px; /* Adjust as needed */
}

.menu-container {
  width: 90%;
  border: 1px solid #ddd; /* Border color */
  border-radius: 4px;
  overflow: hidden;
}

.menu-top {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ddd; /* Horizontal line */
}

.menu-item {
  width: 50%;
  text-align: center;
  padding: 10px;
  box-sizing: border-box;
}

.left {
  border-right: 1px solid #ddd; /* Vertical line */
}

.right {
  border-left: 1px solid #ddd; /* Vertical line */
}

.menu-bottom {
  text-align: center;
  padding: 10px;
  background-color: #f3f3f3; /* Different background for visual separation */
}
