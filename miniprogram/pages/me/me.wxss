.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #EEE;
}

.profile-section {
  width: 100%;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: #DDD;
  margin: 10px auto;
}

.info-list {
  display: flex;
  flex-direction: column;
  margin-top: 20px;
}

.weui-label {
  margin-bottom: 5px;
}

.weui-input {
  margin-bottom: 15px;
  line-height: 30px;
  padding: 0 10px;
  background-color: #FFF;
  border-radius: 4px;
  border: 1px solid #CCC;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #FFD700;
}
