<view class="page">
  <view class="form-container">
    <input class="input" placeholder="手机号" type="number" maxlength="11" bindinput="inputPhone" />
    <input class="input" placeholder="密码" password="true" bindinput="inputPassword" />
    <button class="btn" bindtap="login" disabled="{{!phone || !password}}">登录</button>
    <button class="btn" bindtap="goToSignUp">注册</button>
  </view>
</view>
