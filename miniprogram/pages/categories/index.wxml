<view class="page">
  <!-- Search Bar -->
  <view class="search-bar">
    <input class="search-input" type="text" placeholder="搜索岗位" bindinput="onSearchInput"/>
    <button class="search-btn" bindtap="onSearch">搜索</button>
  </view>
  
  <!-- Filter Options -->
  <view class="filter-bar">
    <view class="filter-item" data-filter="location" bindtap="onFilterTap">位置</view>
    <view class="filter-item" data-filter="industry" bindtap="onFilterTap">行业</view>
    <view class="filter-item" data-filter="time" bindtap="onFilterTap">时段</view>
  </view>
  
  <!-- Job Listings -->
  <view class="jobs-list">
    <block wx:for="{{jobs}}" wx:key="id">
      <view class="job-item" bindtap="onJobTap" data-id="{{item.id}}">
        <view class="job-info">
          <text class="job-title">{{item.title}}</text>
          <text class="job-industry">{{item.industry}}</text>
          <text class="job-salary">{{item.salary}}</text>
        </view>
        <text class="job-location">{{item.location}}</text>
      </view>
    </block>
  </view>

  <!-- Bottom Navigation Bar (Defined in app.json) -->
</view>

