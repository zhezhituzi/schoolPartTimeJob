.job-item {
  display: flex;
  justify-content: space-between;
  padding: 10px;
  border-radius: 4px;
  background-color: #f7f7f7;
  margin-bottom: 10px;
}

.job-info {
  flex-grow: 1;
}

.job-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.job-industry {
  font-size: 14px;
  color: #666;
  margin-top: 5px;
}

.job-salary {
  font-size: 14px;
  color: #ff9500;
}

.job-location {
  font-size: 14px;
  color: #666;
  padding: 5px 10px;
  background-color: #eeeeee;
  border-radius: 4px;
  align-self: center; /* 这会使得位置信息在垂直方向上居中 */
}

