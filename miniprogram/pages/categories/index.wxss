.search-bar {
  display: flex;
  justify-content: space-between;
  padding: 10px;
  background-color: #f8f8f8; /* 调整背景颜色以区分搜索栏 */
}

.search-input {
  flex-grow: 1; /* 让输入框占据大部分空间 */
  margin-right: 8px; /* 与搜索按钮的间隔 */
  padding: 8px;
  border: none; /* 移除边框 */
  border-radius: 15px; /* 输入框圆角 */
  background-color: #fff; /* 输入框背景颜色 */
}

.search-btn {
  padding: 8px 16px;
  background-color: #1aad19; /* 微信绿色 */
  color: #fff; /* 按钮文字颜色 */
  border-radius: 15px; /* 按钮圆角 */
  border: none; /* 移除边框 */
}

.filter-bar {
  display: flex;
  justify-content: space-around;
  padding: 10px 0;
  background-color: #fff; /* 调整背景颜色以区分筛选栏 */
}

.filter-item {
  padding: 5px 10px;
  border-radius: 15px; /* 筛选项圆角 */
  background-color: #f1f1f1; /* 筛选项背景颜色 */
}

