.page {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30px;
  background-color: #ffffff;
}

.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
  background-color: #cccccc; /* Placeholder color, replace with your avatar image */
}

.id-name-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-id,
.user-name {
  color: #333333;
  font-size: 16px;
  margin: 5px 0;
}

.nav-section {
  width: 100%;
  border-top: 1px solid #eeeeee;
}

.nav-item {
  display: block;
  padding: 15px;
  text-align: center;
  border-bottom: 1px solid #eeeeee;
}



