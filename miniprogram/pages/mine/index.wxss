.page {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30px;
  background-color: #ffffff;
}

.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
  background-color: #cccccc; /* 默认头像的灰色背景 */
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}


.default-avatar {
  background-color: #cccccc; /* 灰色背景作为默认头像 */
}


.id-name-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-id,
.user-name {
  color: #333333;
  font-size: 16px;
  margin: 5px 0;
}

.nav-section {
  width: 100%;
  border-top: 1px solid #eeeeee;
}

.nav-item {
  display: block;
  padding: 15px;
  text-align: center;
  border-bottom: 1px solid #eeeeee;
}

.not-logged-in {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #666;
  background-color: #cccccc; /* 占位符颜色 */
}


.login-btn {
  margin-top: 20px;
  padding: 10px;
  background-color: #007aff; /* 蓝色背景 */
  color: #ffffff; /* 白色文字 */
  border-radius: 5px; /* 圆角边框 */
  border: none; /* 去除边框 */
  font-size: 16px; /* 字体大小 */
}
