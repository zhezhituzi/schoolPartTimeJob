.page {
  display: flex;
  flex-direction: column;
}

.search-container {
  margin: 10px;
}

.search-input {
  height: 35px;
  padding: 5px;
  border-radius: 4px;
  border: 1px solid #ccc;
}

.filter-container {
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
}

.filter-item {
  background-color: #f8f8f8;
  padding: 5px 15px;
  border-radius: 15px;
}

.jobs-list {
  flex-grow: 1;
  background-color: #eee;
  padding: 10px;
}

.job-item {
  background-color: #fff;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 4px;
}

.job-title {
  font-weight: bold;
}

.job-salary {
  color: #1AAD19;
}

.weui-tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.weui-tabbar__item {
  text-align: center;
  padding: 10px;
}

.weui-bar__item--on {
  color: #1296db;
}
