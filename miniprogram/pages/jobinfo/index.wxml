<view class="page">
  <view class="form-container">
    <view class="weui-cells weui-cells_form">
      <!-- 用人单位 -->
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">用人单位</label></view>
        <view class="weui-cell__bd">{{jobDetail.employer || '未设置'}}</view>
      </view>

      <!-- 招聘人 -->
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">招聘人</label></view>
        <view class="weui-cell__bd">{{jobDetail.hr || '未设置'}}</view>
      </view>

      <!-- 手机号 -->
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">手机号</label></view>
        <view class="weui-cell__bd">{{jobDetail.phone || '未设置'}}</view>
      </view>

      <!-- 邮箱 -->
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">邮箱</label></view>
        <view class="weui-cell__bd">{{jobDetail.email || '未设置'}}</view>
      </view>

      <!-- 店铺位置 -->
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">店铺位置</label></view>
        <view class="weui-cell__bd">{{jobDetail.selectedPlace || '未设置'}}</view>
      </view>

      <!-- 岗位名称 -->
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">岗位名称</label></view>
        <view class="weui-cell__bd">{{jobDetail.jobName || '未设置'}}</view>
      </view>

      <!-- 工作时段 -->
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">工作时段</label></view>
        <view class="weui-cell__bd">{{jobDetail.startTime || '未设置'}} - {{jobDetail.endTime || '未设置'}}</view>
      </view>

      <!-- 时薪 -->
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">时薪（元）</label></view>
        <view class="weui-cell__bd">{{jobDetail.salary || '未设置'}}</view>
      </view>

      <!-- 行业 -->
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">行业</label></view>
        <view class="weui-cell__bd">{{jobDetail.selectedIndustry || '未设置'}}</view>
      </view>

      <!-- 工作内容 -->
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">工作内容</label></view>
        <view class="weui-cell__bd">{{jobDetail.jobDescription || '未设置'}}</view>
      </view>
    </view>
  </view>
</view>
